{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "target": "ES2016",
    "baseUrl": "./src",
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
